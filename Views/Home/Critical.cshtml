<body>
    <div class="container">
        <h1>Welcome to Performance application tools</h1>
        <hr />
        <h2>Performance message Logs for Critical logs</h2>
        <div id="panel">
            <form method="post" action="/Home/CriticalForm">
                <div class="form-group">
                    <label for="ErrorType" class="label">Critical message</label>

                </div>
                <div class="form-group">
                    <label for="lblcustomessage" class="label">Custom Message:</label>
                    <input type="text" id="CustomErrorMeessage" name="CustomErrorMeessage" />
                </div>

                <div class="form-group">
                    <label for="lblperformancecount" class="label">performance count:</label>
                    <input type="number" id="performancecount" name="performancecount" class="input" required>
                </div>
                <button type="submit" class="button">Submit</button>

            </form>
        </div>

    </div>
</body>